<style media="screen">
  .products-evey{
  margin-top: 30px;
margin-left: 40px;
text-decoration: none;
  }
  .productstitle{
    margin-left: 40px;
    margin-bottom: 20px;
  }
  .productimage{
    margin-bottom: 30px;
  }
  .productimage:hover{
  }
  .boxcenter{
    margin: 0 auto;
  }
  #panel, #flip {
    padding: 5px;
    text-align: center;
    //background-color: #d8d6d6;
    background-color: grey;
    border: solid 1px #c3c3c3;
    color:white;
}
#panel {
    padding: 30px;
    display: none;
}


.pdt-index {
    background: linear-gradient( rgba(36,65,75,0.3), rgba(36,65,75,0.3) ), url("http://img02.tooopen.com/images/20160516/tooopen_sy_162598677523.jpg"); //在背景图片上做渐变效果 线性渐变 颜色号 图片地址
    display: block;
    background-attachment: fixed; //fixed使得背景图片缩放比例适中；如果使用auto就会放大到只看到图片的一个部分
    background-repeat: no-repeat; //背景图片不重复放置
    background-position: center top; //使得背景图片在页面中 置中、置顶
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover; //cover使得背景图片在页面中铺满
    border-style: none;
    margin-left: auto; //修改后无变化
    margin-right: auto; //修改后无变化
    margin-bottom: 0; //修改后无变化
    border-radius: 0; //修改后无变化
    min-height: 2880px; //背景图片的高度设置!!!!
    position: relative;
    color: white; //box中，所有字体的颜色（除了 按钮字体色）
}



.titlebox{
  color:grey;
  height:90px;
  width:210px;
  background-color:white ;
  line-height: 50px;
  clear: both;
  margin-bottom: 50px;
  text-align: center;
  border-radius: 3px;
}
.titlebox:hover{
  background-color:rgba(255,255,255,0.8);
}
.productstitle{
  color: #edeeec;
  text-align:left;
  font-size: 30px;
}
.smallcircle{
  width:50px;
  height:50px;
  background-color: #c5c5c5;
  border-radius: 25px;
  border:2px solid grey;
  margin-bottom: 10px;
  text-align: center;
  line-height: 50px;
  font-size: 25px;
  font-weight: bold;
  position: relative;
}
.smallcircle:hover{
  background-color: orange;
  border: 2px solid white;
  color:white;
}
.qbbb-text{
  font-size:12px;
  color: white;
  position: relative;
  left:20px;
  top:-4px;
}
.nav-left{
  height: 1900px;
  //background-color: yellow;
}
.nav-inside{
  width:90%;
  height:50px;
  background-color: rgba(0,0,0,0.3);
  border-radius: 3px;
  margin-bottom: 5px;
  color: white;
  line-height: 50px;
  text-align: center;
}
.nav-inside:hover{
  background-color: orange;
  border:1px solid white;
  text-decoration: none;
}
.nav-text{
   color:white;
   text-decoration: none;
}
.nav-text:hover{
  color:white;
  text-decoration: none;
}
</style>



<body class="pdt-index">




<div class="products-evey">

<!--题头内容开始-->
<div class="qbbb">
  <h2 class="productstitle" style="">全部宝贝</h2>
  <hr>
  <table>
    <tr>
      <td><div class="smallcircle">邮</div></td>
      <td class="qbbb-text">全国包邮
