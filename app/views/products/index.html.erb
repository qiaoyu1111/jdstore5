<div class="nav-text">
     <%= link_to carts_path, :class => "nav-text"  do  %>
    <div class="nav-inside">
我的购物车 <i class="fa fa-shopping-cart" aria-hidden="true"></i>
  </div>
<% end %>
</div>

<div class="nav-text">
     <%= link_to carts_path, :class => "nav-text"  do  %>
    <div class="nav-inside">
我的购物车2 <i class="fa fa-shopping-cart" aria-hidden="true"></i>
  </div>
<% end %>
</div>



</div>
<!--左侧导航栏结束-->





  <% @products.each do |product| %>
  <div class="col-xs-6 col-md-3 boxcenter">


    <%= link_to product_path(product) do %>


    <% if product.image.present? %>


    <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
    <% else %>

      <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>


    <% end %>
    <% end %>
<div class="titlebox">

      【<%= product.title %>】
       <span class="" style="color:orange;font-weight:bold;">¥ <%= product.price %></span>



